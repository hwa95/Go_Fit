<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
      Height<br>
      <%= @user.height %><br>
      Weight<br>
      <%= @user.weight %><br>
      Birthday<br>
      <%= @user.date_of_birth %><br>
      Description<br>
      <%= @user.description %>
</div>